- if flash[:message]
  #flash
    %div{ class: "alert alert-#{flash[:type]} alert-dismissible fade show", role: 'alert' }
      %button{ type: 'button', class: 'close', 'data-dismiss': 'alert', 'aria-label': 'Close' }
        %span{ 'aria-hidden': 'true' } &times;
      .text-center=h flash[:message]
